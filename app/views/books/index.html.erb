<div class="container">
  <div class="row">
    <div class="col-lg-3">

      <h2>User info</h2>
      <p><%= image_tag current_user.get_profile_image(100,100) %></p>
        <table class="table">
          <tr>
            <th>name</th>
              <td>
                <%= current_user.name %>
              </td>
          </tr>
          <tr>
            <th>introduction</th>
              <td>
                <%= current_user.introduction %>
              </td>
          </tr>
        </table>
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog" %></i>
        <% end %>

        <h2>New Book</h2>
        
        <%= form_with model: @book do |f| %>
            <h6>Title</h6>
              <%= f.text_field :title %>
            <h6>Opinion</h6>
              <%= f.text_area :body %>
            <%= link_to book_path(current_user), class: "btn btn-success" do %>Create Book
            <% end %> 
        <% end %>
        
    </div>
    
    <div class="col-lg-8">

        <h1>Books</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
      
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </td>
          <td>
          <%= book.title %>
          </td>
          <td>
          <%= book.body %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
    </div>
  </div>
</div>