<%= render 'books/list', book: @book %>

<h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>
      
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </td>
          <td>
            <span>
            <%= link_to book.title, book_path(book.id) %>
            </span>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  