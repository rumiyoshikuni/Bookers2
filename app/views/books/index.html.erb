<h2>User info</h2>

<p><%= image_tag current_user.get_profile_image(100,100) %></p>

<table>
  <tr>
    <th>name</th>
      <td>
        <%= current_user.name %>
      </td>
  </tr>
  <tr>
    <th>introduction</th>
      <td>
        <%= current_user.introduction %>
      </td>
  </tr>
</table>

  <%= link_to edit_user_path(current_user),class:"btn btn-outline-secondary" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  
<h2>New Book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
<% end %>
  

  
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  
    <tr>
      <td>
      <%= book.title %>
      </td>
      <td>
      <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
      </td>
    </tr>
    
  <% end %>
  
  </tbody>
</table>