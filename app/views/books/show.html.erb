<h1>Book detail</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
      
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
          <%= link_to user_path(book.user) %>
          </td>
          <td>
          <%= link_to book.title, book_path(book.id) %>
          </td>
          <td>
          <%= book.body %>
          </td>
          <td>
            <%= link_to edit_book_path(book_user), class: "btn btn-success" do %>Edit
            <% end %>
          </td>
          <td></td>
          <td>
            <%= link_to book_path(book_user), class: "btn btn-danger" do %>Destroy
            <% end %>
          </td>
        </tr>
      <% end %>
      
      
      

