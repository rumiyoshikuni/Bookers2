<%= render 'books/list', book: @book %>

      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(80,80) %>
            </td>
            <td>
            <span>
              <%= link_to book.title, book_path(book.id) %>
            </span>
            </td>
            <td>
            <%= book.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
        
      </table> 
    
  
