<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  
    <tr>
      <td>
      <%= book.title %>
      </td>
      <td>
      <%= book.Opinion %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
      </td>
    </tr>
    
  <% end %>
  
  </tbody>
</table>